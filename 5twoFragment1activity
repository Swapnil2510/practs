        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/view"
        android:backgroundTint="@color/black"
        android:text="view details"
        />


</LinearLayout>

</RelativeLayout>

